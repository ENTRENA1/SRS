def convert_to_bits(n, pad):
  result = []
  while n > 0:
    if n % 2 == 0:
      result = [0] + result
    else:
      result = [1] + result
    n = n / 2
  while len(result) < pad:
    result = [0] + result
  return result
  
  
def string_to_bits(s):
  result[]
  for c in s:
    result = convert_to_bits(ord(c), 7 ) + result
  return result
    
    
k = random.randbytes(n)

K[] = map(n, str(K))

def cifrar_mensaje(K[], mensaje[], n):
  result[]
  contador = 0;
  while contador < n
    if K[contador] == mensaje[contador]
      result[contador] = [0]
    else
      result[contador] = [1]
    contador++
  return result
      
